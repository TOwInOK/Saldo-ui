//- sm header
header(
    class="lg:hidden bg-saldo text-white shrink-0")
    nav(
        class="flex items-center py-2 lg:py-4 justify-evenly md:-ml-8")
            div(onclick="toggleMobileMenu()")
                +hamburger("white")
            div(class="min-w-2.5 mb-1")
                +logo_mobile_header()
            +mobile_addition_buttons()

    div(class="hidden inline-flex h-dvh absolute z-10 w-full top-0 bg-white" id="mobile-dropdown-menu")
        +menu()
    div(class="hidden inline-flex h-dvh absolute z-20 w-full top-0 bg-white" id="mobile-dropdown-submenu")
        +submenu()

    script.
        toggleMobileMenu = () => {
            document.getElementById("mobile-dropdown-menu").classList.toggle("hidden")
        }

    script.
      toggleMobileSubMenu = () => {
        document.getElementById("mobile-dropdown-submenu").classList.toggle("hidden")
      }