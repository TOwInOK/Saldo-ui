mixin button_catalog(text)
    button(class="p-2 px-2 lg:px-6 bg-saldo-100 rounded-xl items-center text-saldo hover:bg-saldo hover:text-white")
        div(class="text-blue-800 text-base font-bold leading-snug")
        |#{text || "Каталог"}

mixin button_card
    button(class="p-0.5 px-2 xl:px-3 bg-saldo rounded-xl items-center text-base lg:text-xs xl:text-base text-white hover:bg-saldo-100 hover:text-saldo")
        div(class="text-blue-800 text-base font-bold leading-snug")
        |В корзину

mixin menu_categorie(text)
    li(class="w-full")
    li(class="w-full")
        button(class="flex rounded-md hover:bg-saldo-300 items-center justify-between w-full" onclick="toggleMobileSubMenu()")
            div(class="flex gap-2 items-center ml-2 p-2")
                div(class="aspect-square bg-saldo size-6 mb-1")
                span(class="text-saldo-600 text-lg")
                    | #{text || "Категория"}
            div(class="flex fill-transparent stroke-saldo")
                svg(width="30" height="30", viewBox="0 0 30 30", xmlns="http://www.w3.org/2000/svg", class="size-10 rotate-180")
                    path(d="M17.3438 20.625L11.7188 15L17.3438 9.375" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")

mixin submenu_categorie(text)
    div(class="w-full lg:w-auto")
        button(class="flex lg:flex-col rounded-md hover:bg-saldo-300 lg:hover:bg-transparent items-center justify-between w-full lg:w-auto lg:items-start")
            div(class="ml-2.5 p-2 lg:m-0 lg:p-0 items-start flex flex-col justify-start gap-4")
                span(class="text-saldo-600 text-lg")
                    | #{text || "Категория"}
                span(class="text-saldo-600 text-lg hidden lg:block text-pretty")
                    |LOREM LOREM LOREM
                    |LOREM LOREM LOREM
                    |LOREM LOREM LOREM
                    |LOREM LOREM LOREM
                div(class="hidden lg:flex fill-transparent stroke-saldo-300 ml-1")
                    span(class="text-saldo-300 text-lg hidden lg:block")
                        | Ещё
                    svg(width="30" height="30", viewBox="-5 0 30 30", xmlns="http://www.w3.org/2000/svg", class="size-10 -rotate-90")
                        path(d="M17.3438 20.625L11.7188 15L17.3438 9.375" stroke-width="2" stroke-linecap="round" stroke-linejoin="round")

