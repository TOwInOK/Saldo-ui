mixin card_start()
    //main input
    div(class="flex-shrink-0 xl:flex-shrink xl:inline-block bg-white rounded-2xl overflow-hidden snap-start scroll-ms-auto xl:size-1/5")
        +card_image_text

mixin card()
    //main input
    div(class="flex-shrink-0 xl:flex-shrink xl:inline-block bg-white rounded-2xl overflow-hidden snap-center scroll-ms-auto xl:size-1/5")
        +card_image_text

mixin card_end()
    //main input
    div(class="flex-shrink-0 xl:flex-shrink xl:inline-block bg-white rounded-2xl overflow-hidden snap-end scroll-ms-auto xl:size-1/5")
        +card_image_text

mixin card_reversed()
    div(class="flex-shrink bg-white rounded-lg")
        +card_image_text_reversed



mixin card_text()
    h1(class="float-left font-bold xl:text-md xl:text-xl text-saldo-600 leading-normal")
        |  Прямошлифовальные
        br
        |  машины
        |
        span(class="text-saldo-300")
            a(href='#') 12 товаров

mixin card_image()
    img(src="helicopter.png", alt="helicopter", class="h-52 w-44 xl:size-auto xl:object-scale-down xl:object-center p-5")

mixin card_image_text()
    div(class="inline-flex flex-col w-full p-2 space-y-4")
        div(class="xl:ml-2 mt-2")
            +card_text()
        div(class="")
            +card_image()

mixin card_image_text_reversed()
    div(class="flex flex-col xl:flex-row-reverse xl:justify-end xl:items-center gap-2 py-0.5")
        div(class="flex justify-evenly p-2 pb-0 xl:grow")
            img(src="helicopter.png", alt="helicopter", class="h-20 w-22 size-auto object-scale-down xl:object-center")
        div(class="flex xl:ml-2 px-2 xl:pr-0 pb-2")
            h1(class="float-left font-semibold text-[12px] vsm:text-sm text-saldo-600")
                |  Прямошлифовальные
                br
                |  машины
                |
                br(class="hidden xl:block")
                span(class="text-saldo-300")
                    a(href='#') 12 товаров
